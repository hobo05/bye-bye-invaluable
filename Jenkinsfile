pipeline {
  agent any
  stages {
    stage('Get Rid of Your Stuff') {
      steps {
        echo 'Sell those weights that you thought were worthless for $150'
        echo 'Give away your really expensive mattress'
        echo 'Stop trying to guess what people are willing to buy'
        echo 'Give what\'s left to your hoarder friends'
        echo 'Ship the rest'
      }
    }
    stage('Establish Your Foreign HQ') {
      steps {
        echo 'Don\'t renew your lease'
        echo 'Crash at your in-laws\' place'
        echo 'Feel guilty and cook for them a lot'
        echo 'Tell friends that Spain\'s weather is fantastic while being soaked in sweat'
        echo 'Question why you did this to yourself'
      }
    }
    stage('Find a London Flat') {
      steps {
        echo 'Fly to London'
        echo 'Spend your 1 month\'s rent booking a hotel for the week'
        echo 'Discover that real estate agents aren\'t your friends'
        echo 'Find your perfect flat and find out 10 different reasons that you\'re not allowed to rent'
        echo 'Find a way to rent because you don\'t want to flush the money you spent on the hotel down the toilet' 
      }
    }
  }
}